{% extends 'basedashboard.html.twig' %}


{% block body %}

	<section class="light-content our-team">
		<div class="container">
			<div class="row">

				<div class="col-md-12">
					<div class="section-header">
						<h2 class="section-title">Bulletin de note</h2>
						<a href="{{ path('grade_add') }}" class="large-button green-color">Ajouter</a>
					</div>
					<!-- /.section-header -->
				</div>
				<!-- /.col-md-12 -->
			</div>

			<div class="col-md-8 blog-posts">
				<div class="row">
					<div class="col-md-12">
						<div class="post-blog">

							<div class="blog-content">
								<h3 class="titre">{{ grade.name }}</h3>
								<span class="meta-date">
									<a href="#">Le :{{grade.createdAt|date('d-m-Y')}}</a>
								</span>
								<span class="meta-author">
									<a href="#">{{grade.child.firstname}}</a>
								</span></br>
								<p class="light-text">{{ grade.description }}</p>
							</div>
							<!-- /.blog-content -->
						</div>
						<!-- /.post-blog -->
						<div class="blog-image">

							<img src="{{asset(grade.file)}}" alt="">

						</div>
						<!-- /.blog-image -->
					</div>
					<!-- /.col-md-12 -->

				</div>
				<!-- /.row -->
			</div>
			<!-- /.col-md-8 -->

		</div>
		<!-- /.col-md-4 -->

	</div>
	<!-- /.row -->
</div>
<!-- /.container -->{% endblock %}
