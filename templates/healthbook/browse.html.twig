{% extends 'basedashboard.html.twig' %}


{% block body %}



<section class="light-content our-team">
{% for label, messages in app.flashes(['success', 'danger']) %}
        {% for message in messages %}
            <div class="alert-{{ label }} message-flash">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="section-header">
					<h2 class="section-title">Santé</h2>
					<a href="{{ path('healthbook_add') }}" class="large-button green-color">Ajouter</a>
{% for message in app.flashes('danger') %}
	<div class="alert alert-danger">
	{{ message }}
	</div>
{% endfor %}
				</div>
				<!-- /.section-header -->
			</div>
			<!-- /.col-md-12 -->
		</div>
		<!-- /.row -->
	</div>
	<!-- /.container -->

	{% for healthbook in healthbooks %}
		<div class="photo-card">

			<div class="photo-background" style="background-image:url('{{asset(healthbook.file)}}'); "></div>
			<div class="col-md-6">
				<div class="project-info"></br>
				<a href="{{ path('healthbook_read', {'id': healthbook.id}) }}">
				<h3 class="project-title">{{ healthbook.name }}</h3></br>
				<span style="color:white;">Appartient à : {{ healthbook.child }}</span>
				</br>
			<span class="date">Posté le:
				{{healthbook.createdAt|date('d-m-Y')}}</span>
		</br>
	</br>
<div class="p-t-10">
					<a href="{{ path('healthbook_edit', {'id': healthbook.id}) }}" class="large-button-blanc white-color">
						<button class="large-button-blanc white-color" type="submit">Modifier</button>
					</a>


				</div>
</div><!-- /.project-info -->
</div>
</div>
{% endfor %}
</section><!-- /.our-team -->
{% endblock %}
