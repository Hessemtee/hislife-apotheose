{% if post is defined %}

<form method="post" action="{{ path('post_delete', {'id': post.id}) }}">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>

{% endif %}