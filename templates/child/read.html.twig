

{% extends 'basedashboard.html.twig' %}


{% block body %}

	<section class="light-content our-team">
		<div class="container">
			<div class="row">

				<div class="col-md-12">
					<div class="section-header">
						<h2 class="section-title">Mes enfants</h2>
						<a href="{{ path('child_create') }}" class="large-button green-color">Ajouter</a>
					</div>
					<!-- /.section-header -->
				</div>
				<!-- /.col-md-12 -->
			</div>

			<div class="col-md-8 blog-posts">
				<div class="row">
					<div class="col-md-12">
						<div class="post-blog">

							<div class="blog-content">
								<h3 class="titre">{{ child.firstname }}</h3>
                                <h2 class="titre">{{ child.lastname }}</h2>
								<span class="meta-date">
									<a href="#">Le :{{child.birthdate|date('d-m-Y')}}</a>
								</span>
								<span class="meta-author">
								</span></br>
								</div>
							<!-- /.blog-content -->
						</div>
						<!-- /.post-blog -->
						<div class="blog-image">
							{% if (child.picture is null) %}
							<img src="{{asset('/../assets/images/enfantbase.jpg')}}" alt="">
							{% else %} 
							<img src="{{asset(child.picture)}}" alt="">
							{% endif %}
						</div>
						<!-- /.blog-image -->
					</div>
					<!-- /.col-md-12 -->

				</div>
				<!-- /.row -->
			</div>
			<!-- /.col-md-8 -->

		</div>
		<!-- /.col-md-4 -->

	</div>
	<!-- /.row -->
</div>
<!-- /.container -->{% endblock %}
